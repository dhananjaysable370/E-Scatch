<%- include('./partials/header.ejs') %>
    <div class="w-full h-screen dark:bg-zinc-800 dark:text-white flex px-20">
        <% if(error && error.length> 0) { %>
            <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-full bg-red-500">
                <span class="inline-block mt-1 mb-1 text-white">
                    <%= error %>
                </span>
            </div>
            <% } %>

                <!-- Registration Section -->
                <div class="w-1/2 flex items-center justify-center h-screen">
                    <div class="w-full px-32">
                        <h3 class="text-4xl dark:text-white">Welcome to <span
                                class="text-blue-400 font-semibold">Scatch</span></h3>
                        <h4 class="text-2xl mb-5 dark:text-zinc-300">Create your account</h4>
                        <form autocomplete="off" action="/users/register" method="post">
                            <div class="mb-3">
                                <input
                                    class="bg-zinc-100 dark:bg-zinc-700 block w-full px-5 py-2 border-[1px] rounded-full border-zinc-200 dark:border-zinc-600 dark:text-white"
                                    type="text" placeholder="Full Name" name="fullname" required>
                            </div>
                            <div class="mb-3">
                                <input
                                    class="bg-zinc-100 dark:bg-zinc-700 block w-full px-5 py-2 border-[1px] rounded-full border-zinc-200 dark:border-zinc-600 dark:text-white"
                                    type="email" placeholder="Email" name="email" required>
                            </div>
                            <div class="mb-3">
                                <input
                                    class="bg-zinc-100 dark:bg-zinc-700 block w-full px-5 py-2 border-[1px] rounded-full border-zinc-200 dark:border-zinc-600 dark:text-white"
                                    type="password" placeholder="Password" name="password" required>
                            </div>
                            <input class="px-5 rounded-full py-3 mt-2 bg-blue-500 text-white" type="submit"
                                value="Create My Account">
                        </form>
                    </div>
                </div>

                <!-- Login Section -->
                <div class="w-1/2 flex items-center justify-center h-screen">
                    <div class="w-full px-32">
                        <h4 class="text-2xl capitalize mb-5 dark:text-zinc-300">Login to your account</h4>
                        <form autocomplete="off" action="/users/login" method="post">
                            <div class="mb-3">
                                <input
                                    class="block bg-zinc-100 dark:bg-zinc-700 w-full px-5 py-2 border-[1px] rounded-full border-zinc-200 dark:border-zinc-600 dark:text-white"
                                    type="email" placeholder="Email" name="email" required>
                            </div>
                            <div class="mb-3">
                                <input
                                    class="block bg-zinc-100 dark:bg-zinc-700 w-full px-5 py-2 border-[1px] rounded-full border-zinc-200 dark:border-zinc-600 dark:text-white"
                                    type="password" placeholder="Password" name="password" required>
                            </div>
                            <input class="px-5 block rounded-full py-3 mt-2 bg-blue-500 text-white" type="submit"
                                value="Login">
                        </form>
                    </div>
                </div>
    </div>
    <%- include('./partials/footer') %>