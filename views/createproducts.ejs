<%- include('./partials/header') %>

<%- include('./partials/header') %>

    <% if (success && success.length> 0) { %>
        <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
            <span class="inline-block mt-1 mb-1 text-white">
                <%= success %>
            </span>
        </div>
        <% } %>
            <div class="min-h-screen flex flex-col dark:bg-gray-900">
                <div class="container px-10 py-20 flex flex-grow">
                    <div class="w-[25%] flex h-screen flex-col items-start text-gray-700 dark:text-gray-300">
                        <div class="flex flex-col">
                            <a class="block w-fit mb-2 dark:text-gray-200 hover:text-blue-400" href="">All Products</a>
                            <a class="block w-fit mb-2 dark:text-gray-200 hover:text-blue-400" href="">Create New
                                Product</a>
                        </div>
                    </div>
                    <main class="w-3/4 bg-white dark:bg-gray-800 dark:text-gray-200 p-8 shadow ml-4 rounded-lg">
                        <h2 class="text-xl font-bold mb-4">Create New Product</h2>
                        <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data">
                            <div class="mb-6">
                                <h3 class="text-lg font-semibold mb-2">Product Details</h3>
                                <div class="mb-4">
                                    <label class="block mb-2 font-medium">Product Image</label>
                                    <input name="image" type="file"
                                        class="py-2 px-4 rounded bg-gray-100 dark:bg-gray-700 dark:text-gray-200">
                                </div>
                                <div class="grid grid-cols-2 gap-4">
                                    <input name="name" type="text" placeholder="Product Name"
                                        class="border p-2 rounded w-full bg-gray-100 dark:bg-gray-700 dark:text-gray-200">
                                    <input name="price" type="text" placeholder="Product Price"
                                        class="border p-2 rounded w-full bg-gray-100 dark:bg-gray-700 dark:text-gray-200">
                                    <input name="discount" type="text" placeholder="Discount Price"
                                        class="border p-2 rounded w-full bg-gray-100 dark:bg-gray-700 dark:text-gray-200">
                                </div>
                            </div>

                            <div>
                                <h3 class="text-lg font-semibold mb-2">Panel Details</h3>
                                <div class="grid grid-cols-2 gap-4">
                                    <input name="bgcolor" type="text" placeholder="Background Color"
                                        class="border p-2 rounded w-full bg-gray-100 dark:bg-gray-700 dark:text-gray-200">
                                    <input name="panelcolor" type="text" placeholder="Panel Color"
                                        class="border p-2 rounded w-full bg-gray-100 dark:bg-gray-700 dark:text-gray-200">
                                    <input name="textcolor" type="text" placeholder="Text Color"
                                        class="border p-2 rounded w-full bg-gray-100 dark:bg-gray-700 dark:text-gray-200">
                                </div>
                            </div>
                            <input class="px-5 py-2 rounded mt-3 bg-blue-500 text-white dark:bg-blue-600" type="submit"
                                value="Create New Product">
                        </form>
                    </main>
                </div>
            </div>
            <%- include('./partials/footer') %>