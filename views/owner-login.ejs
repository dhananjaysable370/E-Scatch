<%- include('./partials/header') %>
    <div class="w-full h-screen flex px-20 dark:bg-zinc-800 dark:text-white">
        <div class="w-1/2 flex items-center justify-center h-screen">
            <div class="w-full px-32">
                <h4 class="text-2xl capitalize mb-5 dark:text-zinc-300">Admin Access</h4>
                <form action="/create" method="post">
                    <input class="block w-full px-3 py-2 mb-3 border-[1px] rounded-md bg-zinc-100 border-zinc-200 text-black
                           dark:bg-zinc-700 dark:border-zinc-600 dark:text-white" type="email" placeholder="Email"
                        name="email">
                    <input class="block w-full px-3 py-2 mb-3 border-[1px] rounded-md bg-zinc-100 border-zinc-200 text-black
                           dark:bg-zinc-700 dark:border-zinc-600 dark:text-white" type="password"
                        placeholder="Password" name="password">
                    <input class="px-5 py-3 mt-2 rounded-full bg-blue-500 text-white dark:bg-blue-600" type="submit"
                        value="Login">
                </form>
            </div>
        </div>
    </div>
    <%- include('./partials/footer') %>